{
  "name": "wizplay",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yaml build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yaml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yaml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yaml logs -f"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}