# ========================================
# UNIVERSAL PRODUCTION ENVIRONMENT EXAMPLE
# ========================================
# Copy this file to .env.production and update with your values
# This file contains shared environment variables for all services
# ========================================

# ========================================
# GLOBAL SETTINGS
# ========================================
NODE_ENV=production
LOG_LEVEL=info
API_VERSION=/api/v1

# ========================================
# SECURITY & SECRETS
# ========================================
# Generate new secrets: openssl rand -hex 32
TOKEN_SECRET=your-secret-key-here

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Auth Service
AUTH_DATABASE_NAME=auth_service
AUTH_DATABASE_USERNAME=auth_db
AUTH_DATABASE_PASSWORD=strong-password-here
AUTH_DATABASE_HOST=auth_db_server
AUTH_DATABASE_PORT=5434

# User Service
USER_DATABASE_NAME=user_service
USER_DATABASE_USERNAME=user_db
USER_DATABASE_PASSWORD=strong-password-here
USER_DATABASE_HOST=user_db_server
USER_DATABASE_PORT=5436

# Match Service
MATCH_DATABASE_NAME=match_service
MATCH_DATABASE_USERNAME=match_db
MATCH_DATABASE_PASSWORD=strong-password-here
MATCH_DATABASE_HOST=match_db_server
MATCH_DATABASE_PORT=5435

# Coupon Service
COUPON_DATABASE_NAME=coupon_service
COUPON_DATABASE_USERNAME=coupon_db
COUPON_DATABASE_PASSWORD=strong-password-here
COUPON_DATABASE_HOST=coupon_db_server
COUPON_DATABASE_PORT=5437

# Contest Service
CONTEST_DATABASE_NAME=contest_service
CONTEST_DATABASE_USERNAME=contest_db
CONTEST_DATABASE_PASSWORD=strong-password-here
CONTEST_DATABASE_HOST=contest_db_server
CONTEST_DATABASE_PORT=5438

# Wallet Service
WALLET_DATABASE_NAME=wallet_service
WALLET_DATABASE_USERNAME=wallet_db
WALLET_DATABASE_PASSWORD=strong-password-here
WALLET_DATABASE_HOST=wallet_db_server
WALLET_DATABASE_PORT=5439

# Notification Service
NOTIFICATION_DATABASE_NAME=notification_service
NOTIFICATION_DATABASE_USERNAME=notification_db
NOTIFICATION_DATABASE_PASSWORD=strong-password-here
NOTIFICATION_DATABASE_HOST=notification_db_server
NOTIFICATION_DATABASE_PORT=5440

# Database Sync (should be false in production)
DB_SYNC=false

# ========================================
# REDIS CONFIGURATION
# ========================================
# For Docker Compose deployment (using local Redis container)
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_HOST=redis
REDIS_PORT=6379

# ========================================
# MESSAGE QUEUES
# ========================================
# RabbitMQ (for message broker)
RABBITMQ_URL=amqps://user:pass@your-rabbitmq-host.com/vhost

# Kafka (for event streaming)
# For Docker Compose deployment - use internal network
KAF_BROKERS=kafka:9093

# Kafka Client/Group IDs per service
# Auth Service Kafka
AUTH_KAF_CLIENT_ID=auth-service
AUTH_KAF_GROUP_ID=auth-service-group

# User Service Kafka
USER_KAF_CLIENT_ID=user-service
USER_KAF_GROUP_ID=user-service-group

# Match Service Kafka
MATCH_KAF_CLIENT_ID=match-service
MATCH_KAF_GROUP_ID=match-service-group

# Coupon Service Kafka
COUPON_KAF_CLIENT_ID=coupon-service
COUPON_KAF_GROUP_ID=coupon-service-group

# Contest Service Kafka
CONTEST_KAF_CLIENT_ID=contest-service
CONTEST_KAF_GROUP_ID=contest-service-group

# Wallet Service Kafka
WALLET_KAF_CLIENT_ID=wallet-service
WALLET_KAF_GROUP_ID=wallet-service-group

# Notification Service Kafka
NOTIFICATION_KAF_CLIENT_ID=notification-service
NOTIFICATION_KAF_GROUP_ID=notification-service-group


# ========================================
# SERVICE PORTS
# ========================================
AUTH_SERVICE_PORT=4001
USER_SERVICE_PORT=4002
MATCH_SERVICE_PORT=4003
COUPON_SERVICE_PORT=4004
CONTEST_SERVICE_PORT=4005
WALLET_SERVICE_PORT=4006
NOTIFICATION_SERVICE_PORT=4007
GATEWAY_SERVICE_PORT=8000

# ========================================
# GATEWAY SERVICE URLS (Docker)
# ========================================
AUTH_SERVICE_URL=http://auth_service:4001
USER_SERVICE_URL=http://user_service:4002
MATCHES_SERVICE_URL=http://match_service:4003
COUPONS_SERVICE_URL=http://coupon_service:4004
CONTEST_SERVICE_URL=http://contest_service:4005
WALLET_SERVICE_URL=http://wallet_service:4006
NOTIFICATION_SERVICE_URL=http://notification_service:4007

# ========================================
# EMAIL (SMTP)
# ========================================
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587

# ========================================
# SMS (MSG91)
# ========================================
MSG91_BASE_URL=https://api.msg91.com/api/v5/
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_TEMPLATE_ID=your-template-id

# ========================================
# GOOGLE OAUTH
# ========================================
GOOGLE_IOS_CLIENT_ID=your-ios-client-id
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id

# ========================================
# OPENAI API
# ========================================
OPENAI_API_KEY=your-openai-api-key

# ========================================
# ROANUZ CRICKET API (Match Service)
# ========================================
ROANUZ_PK=your-production-public-key
ROANUZ_AK=your-production-access-key

# ========================================
# ASSET SERVICE
# ========================================
ASSET_SERVICE_URL=https://your-asset-service-url.com/

# ========================================
# CLIENT/FRONTEND
# ========================================
CLIENT_HOST=https://your-production-domain.com
ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com
