{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "nodenext",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}